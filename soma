#include <iostream>
using namespace std;

int soma (int a, int b)
{
    return a + b;
}

void somalog()
{
    int a, b;

    cout << "Informe o primeiro numero: ";
    cin >> a;

    cout << "Informe o segundo numero: ";
    cin >> b;

    int result = soma(a,b);

    cout << "A soma eh " << result << endl;

}

int main() {

    somalog();
}
